<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:CPvC.UI.Converters"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="CPvC.UI.Forms.MainWindow"
        mc:Ignorable="d"
        Title="CPvC" Height="705.125" Width="784.535" Closing="Window_Closing" Loaded="Window_Loaded" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp" SizeToContent="WidthAndHeight" ResizeMode="NoResize" Icon="../Resources/cpvc.png">
    <Window.Resources>
        <converters:Ticks x:Key="ticksConverter" />
        <converters:IsNotNull x:Key="isNotNullConverter" />
        <converters:RunningIcon x:Key="runningIconConverter" />
        <converters:BooleanInverter x:Key="booleanInverterConverter" />
        <Style x:Key="MachineButtonStyle" TargetType="{x:Type Button}">
            <Style.Resources>
                <Style TargetType="{x:Type Image}">
                    <Style.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Style.Resources>
            <Setter Property="IsEnabled" Value="{Binding ActiveMachineViewModel.Machine, Converter={StaticResource isNotNullConverter}, Mode=OneWay}" />
        </Style>
        <Style x:Key="RegularMachineButtonStyle" TargetType="{x:Type Button}">
            <Style.Resources>
                <Style TargetType="{x:Type Image}">
                    <Style.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Style.Resources>
        </Style>
        <Style x:Key="PausableMachineButtonStyle" TargetType="{x:Type Button}">
            <Style.Resources>
                <Style TargetType="{x:Type Image}">
                    <Style.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Style.Resources>
            <Setter Property="IsEnabled" Value="{Binding ActivePausableMachine, Converter={StaticResource isNotNullConverter}, Mode=OneWay}" />
        </Style>
        <CollectionViewSource x:Key="Machines" Source="{Binding Machines}"/>
        <CollectionViewSource x:Key="MachineViewModels" Source="{Binding MachineViewModels}"/>
        <CollectionViewSource x:Key="OpenMachines" Source="{Binding MachineViewModels}" Filter="OpenMachineViewModels_Filter" IsLiveFilteringRequested="True">
            <CollectionViewSource.LiveFilteringProperties>
                <System:String>Machine.RequiresOpen</System:String>
            </CollectionViewSource.LiveFilteringProperties>
        </CollectionViewSource>
        <CollectionViewSource x:Key="ReplayMachines" Source="{Binding ReplayMachines}"/>
        <CollectionViewSource x:Key="RemoteMachines" Source="{Binding RemoteMachines}"/>
    </Window.Resources>
    <Grid AllowDrop="True" Margin="0,0,0,0" Background="#FFF0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Menu Height="30" Margin="0" VerticalAlignment="Top" VerticalContentAlignment="Center">
            <MenuItem Header="File">
                <MenuItem x:Name="_newMenuItem" Header="New..." Click="NewMenuItem_Click"/>
                <MenuItem x:Name="_openMenuItem" Header="Open..." Click="OpenMenuItem_Click"/>
                <MenuItem x:Name="_connectMenuItem" Header="Connect" Click="_connectMenuItem_Click"/>
                <MenuItem x:Name="_closeMenuItem" Header="Close" Click="CloseMenuItem_Click"/>
                <Separator/>
                <MenuItem x:Name="_exitMenuItem" Header="Exit" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem x:Name="_machineMenuItem" Header="Machine">
                <MenuItem Header="Drive A:">
                    <MenuItem.Icon>
                        <Image Width="16" Height="16" Source="../Resources/floppy.png" />
                    </MenuItem.Icon>
                    <MenuItem x:Name="_driveAMenuItem" Header="Load..." Command="{Binding ActiveMachineViewModel.DriveACommand}"/>
                    <MenuItem x:Name="_driveAEjectMenuItem" Header="Eject" Command="{Binding ActiveMachineViewModel.DriveAEjectCommand}"/>
                </MenuItem>
                <MenuItem Header="Drive B:">
                    <MenuItem.Icon>
                        <Image Width="16" Height="16" Source="../Resources/floppy.png" />
                    </MenuItem.Icon>
                    <MenuItem x:Name="_driveBMenuItem" Header="Load..." Command="{Binding ActiveMachineViewModel.DriveBCommand}"/>
                    <MenuItem x:Name="_driveBEjectMenuItem" Header="Eject" Command="{Binding ActiveMachineViewModel.DriveBEjectCommand}"/>
                </MenuItem>
                <MenuItem Header="Tape">
                    <MenuItem.Icon>
                        <Image Width="16" Height="16" Source="../Resources/tape16.png" />
                    </MenuItem.Icon>
                    <MenuItem x:Name="_tapeMenuItem" Header="Load..." Command="{Binding ActiveMachineViewModel.TapeCommand}"/>
                    <MenuItem x:Name="_tapeEjectMenuItem" Header="Eject" Command="{Binding ActiveMachineViewModel.TapeEjectCommand}"/>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="_pauseMenuItem" Header="Pause" Command="{Binding ActiveMachineViewModel.PauseCommand}">
                    <MenuItem.Icon>
                        <Image Width="16" Height="16" Source="../Resources/pause16.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="_resumeMenuItem" Header="Resume" Command="{Binding ActiveMachineViewModel.ResumeCommand}">
                    <MenuItem.Icon>
                        <Image Width="16" Height="16" Source="../Resources/resume16.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="_resetMenuItem" Header="Reset" Command="{Binding ActiveMachineViewModel.ResetCommand}">
                    <MenuItem.Icon>
                        <Image Width="16" Height="16" Source="../Resources/reset16.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="_addBookmarkMenuItem" Header="Add Bookmark" Command="{Binding ActiveMachineViewModel.AddBookmarkCommand}">
                    <MenuItem.Icon>
                        <Image Width="16" Height="16" Source="../Resources/bookmarkadd16.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="_jumpToMostRecentBookmarkMenuItem" Header="Jump to Most Recent Bookmark" Command="{Binding ActiveMachineViewModel.JumpToMostRecentBookmarkCommand}">
                    <MenuItem.Icon>
                        <Image Width="16" Height="16" Source="../Resources/bookmarkprev16.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="_jumpToBookmarkMenuItem" Header="Bookmarks..." Command="{Binding ActiveMachineViewModel.BrowseBookmarksCommand}">
                    <MenuItem.Icon>
                        <Image Width="16" Height="16" Source="../Resources/bookmark16.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="_startServerMenuItem" Header="Start Server" Command="{Binding ActiveMachineViewModel.StartServerCommand}"/>
                <Separator/>
                <MenuItem x:Name="_renameFileMenuItem" Header="Rename machine..." Command="{Binding ActiveMachineViewModel.RenameCommand}"/>
                <MenuItem x:Name="_compactFileMenuItem" Header="Compact machine file" Command="{Binding ActiveMachineViewModel.CompactCommand}"/>
            </MenuItem>
        </Menu>
        <ToolBarTray x:Name="toolBarTray" Margin="0" VerticalAlignment="Top" Grid.Row="1" Background="#FFF0F0F0">
            <ToolBar x:Name="toolBar" ToolBarTray.IsLocked="True" HorizontalContentAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#FFF0F0F0">
                <Button x:Name="_driveAButton" Height="25" VerticalAlignment="Top" Width="40" Style="{StaticResource RegularMachineButtonStyle}" Command="{Binding ActiveMachineViewModel.DriveACommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../Resources/floppy.png" Width="16" Height="16" Stretch="None" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased"/>
                        <TextBlock><Run Text="A:"/></TextBlock>
                    </StackPanel>
                </Button>
                <Button x:Name="_driveBButton" Height="25" VerticalAlignment="Top" Width="40" Style="{StaticResource RegularMachineButtonStyle}" Command="{Binding ActiveMachineViewModel.DriveBCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../Resources/floppy.png" Width="16" Height="16" Stretch="None" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased"/>
                        <TextBlock><Run Text="B:"/></TextBlock>
                    </StackPanel>
                </Button>
                <Button x:Name="_tapeButton" Height="25" VerticalAlignment="Top" Width="25" Style="{StaticResource RegularMachineButtonStyle}" Command="{Binding ActiveMachineViewModel.TapeCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../Resources/tape16.png" Width="16" Height="16" Stretch="None" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased"/>
                    </StackPanel>
                </Button>
                <Separator/>
                <Button x:Name="_pauseButton" Height="25" VerticalAlignment="Top" Width="25" Style="{StaticResource RegularMachineButtonStyle}" Command="{Binding ActiveMachineViewModel.PauseCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../Resources/pause16.png" Width="16" Height="16" Stretch="None" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased"/>
                    </StackPanel>
                </Button>
                <Button x:Name="_resumeButton" Height="25" VerticalAlignment="Top" Width="25" Style="{StaticResource RegularMachineButtonStyle}" Command="{Binding ActiveMachineViewModel.ResumeCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../Resources/resume16.png" Width="16" Height="16" Stretch="None" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased"/>
                    </StackPanel>
                </Button>
                <Button x:Name="_resetButton" Height="25" VerticalAlignment="Top" Width="25" Style="{StaticResource RegularMachineButtonStyle}" Command="{Binding ActiveMachineViewModel.ResetCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../Resources/reset16.png" Width="16" Height="16" Stretch="None" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased"/>
                    </StackPanel>
                </Button>
                <Separator/>
                <Button x:Name="_addBookmarkButton" Height="25" VerticalAlignment="Top" Width="25" Style="{StaticResource MachineButtonStyle}" Command="{Binding ActiveMachineViewModel.AddBookmarkCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../Resources/bookmarkadd16.png" Width="16" Height="16" Stretch="None" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased"/>
                    </StackPanel>
                </Button>
                <Button x:Name="_seekToLastBookmarkButton" Height="25" VerticalAlignment="Top" Width="25" Style="{StaticResource MachineButtonStyle}" Command="{Binding ActiveMachineViewModel.JumpToMostRecentBookmarkCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../Resources/bookmarkprev16.png" Width="16" Height="16" Stretch="None" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased"/>
                    </StackPanel>
                </Button>
                <Button x:Name="_browseBookmarksButton" Height="25" VerticalAlignment="Top" Width="25" Style="{StaticResource MachineButtonStyle}" Command="{Binding ActiveMachineViewModel.BrowseBookmarksCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../Resources/bookmark16.png" Width="16" Height="16" Stretch="None" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased"/>
                    </StackPanel>
                </Button>
            </ToolBar>
        </ToolBarTray>
        <TabControl x:Name="_machineTabControl" Margin="5,5,5,5" Grid.Row="2" Height="576" Width="768" SelectedItem="{Binding ActiveItem, Mode=TwoWay}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="16" Height="16" Stretch="None" Source="{Binding Machine.Running, Converter={StaticResource runningIconConverter}, Mode=OneWay}"/>
                        <TextBlock Text="{Binding Machine.Name, Mode=OneWay}"/>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>  
                    <Grid MouseLeftButtonUp="ScreenGrid_MouseLeftButtonUp">
                        <Rectangle Fill="#7F000000" Stroke="#7F000000" Width="768" Height="576" VerticalAlignment="Top" HorizontalAlignment="Left" Panel.ZIndex="1">
                            <Rectangle.Style>
                                <Style TargetType="Rectangle">
                                    <Setter Property="Visibility" Value="Hidden"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Machine.Running}" Value="False">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Rectangle.Style>
                        </Rectangle>
                        <Image Width="768" Height="576" HorizontalAlignment="Left" VerticalAlignment="Top" Focusable="True" Source="{Binding Machine.Display.Bitmap}" RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="Fill"/>
                        <Grid Margin="0,0,20,20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Panel.ZIndex="2" Opacity="1.0">
                            <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Opacity="0.7" Panel.ZIndex="0" Fill="Black" RadiusX="8" RadiusY="8"/>
                            <Label Content="{Binding Machine.Status, NotifyOnTargetUpdated=True}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="24" Panel.ZIndex="1">
                                <Label.Effect>
                                    <DropShadowEffect Direction="315" ShadowDepth="4" Color="Black" Opacity="1.0" BlurRadius="0.0"/>
                                </Label.Effect>
                            </Label>
                            <Grid.Style>
                                <Style TargetType="{x:Type Grid}">
                                    <Setter Property="Opacity" Value="1.0"/>
                                    <Style.Triggers>
                                        <EventTrigger RoutedEvent="Binding.TargetUpdated">
                                            <BeginStoryboard>
                                                <Storyboard AutoReverse="False">
                                                    <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity">
                                                        <LinearDoubleKeyFrame Value="1.0" KeyTime="0:0:0"/>
                                                        <LinearDoubleKeyFrame Value="1.0" KeyTime="0:0:2"/>
                                                        <LinearDoubleKeyFrame Value="0.0" KeyTime="0:0:2.5"/>
                                                    </DoubleAnimationUsingKeyFrames>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </TabControl.ContentTemplate>
            <TabControl.ItemsSource>
                <CompositeCollection>
                    <TabItem Header="Home">
                        <TabItem.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Home"/>
                                </StackPanel>
                            </DataTemplate>
                        </TabItem.HeaderTemplate>
                        <TabItem.ContentTemplate>
                            <DataTemplate>
                                <ScrollViewer>
                                    <Grid>
                                        <StackPanel>
                                            <Label Content="Machines" FontWeight="Bold" FontSize="14" />
                                            <ItemsControl ItemsSource="{Binding Source={StaticResource MachineViewModels}}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid MouseLeftButtonUp="MachinePreviewGrid_MouseLeftButtonUp">
                                                            <Grid.ContextMenu>
                                                                <ContextMenu>
                                                                    <MenuItem x:Name="_pausePreviewMenuItem" Header="Pause" Command="{Binding PauseCommand}"/>
                                                                    <MenuItem x:Name="_resumePreviewMenuItem" Header="Resume" Command="{Binding ResumeCommand}"/>
                                                                    <MenuItem x:Name="_openPreviewMenuItem" Header="Open" Command="{Binding OpenCommand}"/>
                                                                    <MenuItem x:Name="_closePreviewMenuItem" Header="Close" Command="{Binding CloseCommand}"/>
                                                                    <MenuItem x:Name="_removeOpenMachineMenuItem" Header="Remove" Click="RemoveMachineMenuItem_Click"/>
                                                                </ContextMenu>
                                                            </Grid.ContextMenu>
                                                            <StackPanel Margin="5">
                                                                <Image Width="192" Height="144" HorizontalAlignment="Center" VerticalAlignment="Top" Focusable="True" RenderOptions.BitmapScalingMode="Linear" Stretch="Fill" Margin="0" Source="{Binding Machine.Display.Bitmap}" ToolTip="{Binding Machine.Filepath}" Cursor="Hand"/>
                                                                <Label Content="{Binding Machine.Name}" HorizontalAlignment="Center"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Grid>
                                </ScrollViewer>
                            </DataTemplate>
                        </TabItem.ContentTemplate>
                    </TabItem>
                    <CollectionContainer Collection="{Binding Source={StaticResource OpenMachines}}" />
                </CompositeCollection>
            </TabControl.ItemsSource>
        </TabControl>
        <StatusBar x:Name="_statusBar" Height="30" Grid.Row="3" VerticalAlignment="Top">
            <TextBlock x:Name="_clockTextBlock" TextWrapping="Wrap" Text="{Binding ActiveMachineViewModel.Machine.Ticks, Converter={StaticResource ticksConverter}, Mode=OneWay, StringFormat=\{0:h\\:mm\\:ss\}}"/>
            <Separator/>
            <Slider x:Name="_volumeSlider" Width="60" VerticalAlignment="Center" Maximum="255" TickPlacement="BottomRight" TickFrequency="64" Value="{Binding ActiveMachineViewModel.Machine.Volume, Mode=TwoWay}" ToolTip="{Binding ActiveMachineViewModel.Machine.Volume}" />
            <Button x:Name="_previousBookmark" Content="&lt;&lt;" Command="{Binding ActiveMachineViewModel.SeekToPrevBookmarkCommand}"/>
            <Button x:Name="_nextBookmark" Content=">>" Command="{Binding ActiveMachineViewModel.SeekToNextBookmarkCommand}"/>
            <Button x:Name="_beginButton" Content=" |&lt; " Command="{Binding ActiveMachineViewModel.SeekToStartCommand}"/>
            <Slider x:Name="_timelineSlider" Width="300" VerticalAlignment="Center" HorizontalAlignment="Right" Minimum="0" Maximum="{Binding ActiveMachineViewModel.Machine.EndTicks, Mode=OneWay}" Value="{Binding ActiveMachineViewModel.Machine.Ticks, Mode=OneWay}"/>
        </StatusBar>
    </Grid>
</Window>
